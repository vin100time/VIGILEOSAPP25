# Variables d'environnement pour VIGILEOSAPP25
# Copiez ce fichier vers .env et modifiez les valeurs selon votre environnement

# =============================================================================
# CONFIGURATION GÉNÉRALE
# =============================================================================

# Environnement (development, staging, production)
ENVIRONMENT=production

# Mode debug Django (True/False)
DEBUG=False

# Clé secrète Django (générez une clé unique et sécurisée)
SECRET_KEY=your-super-secret-key-change-this-in-production

# Hosts autorisés (séparés par des virgules)
ALLOWED_HOSTS=localhost,127.0.0.1,vigileosapp.com,www.vigileosapp.com

# Module de configuration Django
DJANGO_SETTINGS_MODULE=vigileos.settings.production

# =============================================================================
# BASE DE DONNÉES POSTGRESQL
# =============================================================================

# Nom de la base de données
POSTGRES_DB=vigileosapp

# Utilisateur PostgreSQL
POSTGRES_USER=vigileosapp_user

# Mot de passe PostgreSQL (changez-le !)
POSTGRES_PASSWORD=secure_postgres_password_123

# Port PostgreSQL
POSTGRES_PORT=5432

# URL complète de la base de données
DATABASE_URL=postgresql://vigileosapp_user:secure_postgres_password_123@postgres:5432/vigileosapp

# =============================================================================
# REDIS (CACHE ET CELERY)
# =============================================================================

# Mot de passe Redis (changez-le !)
REDIS_PASSWORD=secure_redis_password_123

# Port Redis
REDIS_PORT=6379

# URL complète Redis
REDIS_URL=redis://:secure_redis_password_123@redis:6379/0

# =============================================================================
# PORTS DES SERVICES
# =============================================================================

# Port de l'application web Django
WEB_PORT=8000

# Port HTTP Nginx
HTTP_PORT=80

# Port HTTPS Nginx
HTTPS_PORT=443

# Port du frontend React
FRONTEND_PORT=3000

# =============================================================================
# SUPERUTILISATEUR DJANGO
# =============================================================================

# Nom d'utilisateur admin
DJANGO_SUPERUSER_USERNAME=admin

# Email admin
DJANGO_SUPERUSER_EMAIL=admin@vigileosapp.com

# Mot de passe admin (changez-le !)
DJANGO_SUPERUSER_PASSWORD=admin123

# =============================================================================
# EMAIL (OPTIONNEL)
# =============================================================================

# Serveur SMTP
EMAIL_HOST=smtp.gmail.com

# Port SMTP
EMAIL_PORT=587

# Utiliser TLS
EMAIL_USE_TLS=True

# Utilisateur SMTP
EMAIL_HOST_USER=your-email@gmail.com

# Mot de passe SMTP
EMAIL_HOST_PASSWORD=your-app-password

# Email par défaut pour l'envoi
DEFAULT_FROM_EMAIL=noreply@vigileosapp.com

# =============================================================================
# MONITORING (OPTIONNEL)
# =============================================================================

# DSN Sentry pour le monitoring des erreurs
SENTRY_DSN=

# =============================================================================
# STOCKAGE CLOUD (OPTIONNEL - AWS S3)
# =============================================================================

# Clé d'accès AWS
AWS_ACCESS_KEY_ID=

# Clé secrète AWS
AWS_SECRET_ACCESS_KEY=

# Nom du bucket S3
AWS_STORAGE_BUCKET_NAME=

# Région AWS
AWS_S3_REGION_NAME=eu-west-1

# =============================================================================
# SÉCURITÉ SSL/TLS
# =============================================================================

# Forcer HTTPS en production
SECURE_SSL_REDIRECT=True

# Durée HSTS (en secondes)
SECURE_HSTS_SECONDS=31536000

# =============================================================================
# DÉVELOPPEMENT UNIQUEMENT
# =============================================================================

# Charger les données de test (development seulement)
LOAD_TEST_DATA=True

# Activer Django Debug Toolbar
ENABLE_DEBUG_TOOLBAR=False